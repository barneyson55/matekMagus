{
  "name": "matek-mester",
  "version": "0.1.0",
  "description": "Interaktív matematika oktatóprogram a magyar diákoknak.",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/barneyson55/matekMagus.git"
  },
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win --x64",
    "publish:win": "electron-builder --win --x64 --publish always",
    "test:unit": "node --test tests/unit",
    "test:e2e": "node scripts/run-tests.js --e2e",
    "test": "node scripts/run-tests.js"
  },
  "author": "BarneySmith",
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3",
    "playwright-core": "^1.57.0"
  },
  "build": {
    "appId": "hu.matek.mester",
    "productName": "MatekMester",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/.git/**",
      "!**/.vscode/**",
      "!**/docs/**",
      "!**/scripts/**",
      "!**/tests/**",
      "!**/node_modules/.cache/**"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "barneyson55",
        "repo": "matekMagus"
      }
    ]
  }
}
